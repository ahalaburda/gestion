<h1 id="titulo_caja"> Apertura de Caja <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form-toggle">
  <%= render 'form' %>
</div>
<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to apertura_cajas_path(@apertura_caja, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <%= link_to apertura_cajas_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">XLS</span>
  <% end %>
</div>
<br>
<table id="table" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Caja</th>
      <th>Apertura</th>
      <th>Cierre</th>
      <th>Saldo inicial efectivo</th>
      <th>Saldo inicial cheque</th>
      <th>Saldo final efectivo</th>
      <th>Saldo final cheque</th>
      <th>Persona</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @apertura_cajas.each do |apertura_caja| %>
      <tr>
        <td><%= apertura_caja.caja %></td>
        <td><%= apertura_caja.apertura %></td>
        <td><%= apertura_caja.cierre %></td>
        <td><%= apertura_caja.saldo_inicial_efectivo %></td>
        <td><%= apertura_caja.saldo_inicial_cheque %></td>
        <td><%= apertura_caja.saldo_final_efectivo %></td>
        <td><%= apertura_caja.saldo_final_cheque %></td>
        <td><%= apertura_caja.persona.nombre_apellido %></td>
        <td>
          <%= link_to edit_apertura_caja_path(apertura_caja), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'remote' => true, 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to apertura_caja, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
