<%= form_for @departamento , validate: true do |f| %>
  <% if @departamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>
      <ul>
      <% @departamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  	<div class="col-md-4">
	    <div class="field">
			<%= f.label :descripcion %>
			<%= f.text_field :descripcion , autofocus:true , :class => 'form-control' %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="field">
		    <%= f.label :pais_id %>
		    <%= f.collection_select :pais_id, Pais.all, :id, :descripcion, {prompt: "Seleccione un pais"}, {class: "form-control"} %>
	    </div>
	</div>
</div>
</br>
	<div class="col-md-offset-10">
		<div class="actions">
			<% if controller.action_name == 'new' or controller.action_name == 'index' %>
				<%= f.submit "Agregar", class: 'btn btn-primary'%>
				
			<% elsif controller.action_name == 'edit' %>
				<%= f.submit "Actualizar", class: 'btn btn-primary'%>
			<% end %>
			<%= button_tag "Cancelar", type: :reset , id: 'btn_cancelar', class: 'btn btn-reset'%>
		</div>
	</div>
<% end %>