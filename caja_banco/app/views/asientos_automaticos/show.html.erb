<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="field">
          <strong>Tipo de asiento:</strong>
          <%= @asiento_automatico.tipo_de_asiento %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="field">
          <strong>Descripcion:</strong>
          <%= @asiento_automatico.descripcion %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="field">
          <strong>Fecha:</strong>
          <%= @asiento_automatico.fecha %>
        </div>
      </div>
    </div>
  </div>
</div>


<h3>Detalles</h3>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Asiento automatico</th>
      <th>Cuenta</th>
      <th>Monto credito</th>
      <th>Monto debito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asientos_automaticos_detalles.each do |asiento_automatico_detalle| %>
    <%if @asiento_automatico.id == asiento_automatico_detalle.asiento_automatico_id%>
      <tr>
        <td><%= asiento_automatico_detalle.asiento_automatico_id %></td>
        <td><%= asiento_automatico_detalle.cuenta.cuenta_contable %></td>
        <td><%= asiento_automatico_detalle.monto_credito %></td>
        <td><%= asiento_automatico_detalle.monto_debito %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
