<h1>Asientos Contables</h1>

<table id="table" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tipo de asiento</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asientos_automaticos.each do |asiento_automatico| %>
      <tr>
        <td><%= asiento_automatico.tipo_de_asiento %></td>
        <td><%= asiento_automatico.descripcion %></td>
        <td><%= asiento_automatico.fecha %></td>
        <td><%= link_to asiento_automatico_path(asiento_automatico), class: 'btn btn-success btn-outline btn-circle', title: 'Mostrar Detalle', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
          <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>