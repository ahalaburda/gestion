<h1> Log de auditoria </h1>

<div class="reports" style="margin-left: 90.333333%">
    <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-print" style="color: white"></span>
    <% end %>
    <%= link_to auditorias_path(@users, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span style="color: white">PDF</span>
    <% end %>
    <a download="auditoria.xls" href="#" onclick="return ExcellentExport.excel(this, 'tabla_print', '');", class="btn btn-xls btn-outline btn-circle">XLS</a>
</div>
</br>

<table id="table" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tabla modificada</th>
      <th>Operacion</th>
      <th>Valor anterior</th>
      <th>Valor nuevo</th>
      <th>Nombre usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auditorias.each do |auditoria| %>
      <tr>
        <td><%= auditoria.nombre_tabla %></td>
        <td><%= auditoria.operacion %></td>
        <td><%= auditoria.valor_anterior %></td>
        <td><%= auditoria.valor_nuevo %></td>
        <td><%= auditoria.nombre_usuario %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="tabla_print">
