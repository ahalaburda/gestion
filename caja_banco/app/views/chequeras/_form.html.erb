<%= form_for @chequera, :validate => true do |f| %>
  <% if @chequera.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chequera.errors.count, "error") %> prohibited this chequera from being saved:</h2>
      <ul>
      <% @chequera.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="row">
    <div class="col-md-4">
      <div class="field">
          <%= f.label :cuenta_bancaria_id %>
          <%= f.collection_select :cuenta_bancaria_id, CuentaBancaria.all, :id, :numero_cuenta, {prompt: "Seleccione una cuenta bancaria"}, {class: "form-control"} %>
      </div>
      <div class="field">
          <%= f.label :estado_id %>
          <%= f.collection_select :estado_id, Estado.all, :id, :descripcion, {prompt: "Seleccione un estado"}, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
          <%= f.label :numero_cheque_inicial %>
           <%= f.text_field :numero_cheque_inicial , class: "form-control" %>
      </div>
      <div class="field">
          <%= f.label :numero_cheque_final %>
           <%= f.text_field :numero_cheque_final , class: "form-control" %>
      </div>
    </div>
 </div>
  </br>
  <div class="col-md-offset-10">
    <div class="actions">
      <% if controller.action_name == 'new' or controller.action_name == 'index' %>
        <%= f.submit "Agregar", :class => 'btn btn-primary'%>
        
      <% elsif controller.action_name == 'edit' %>
        <%= f.submit "Actualizar", :class => 'btn btn-primary'%>
      <% end %>
      <%= button_tag "Cancelar", type: :reset , id: 'btn_cancelar',:class => 'btn btn-reset'%>
    </div>
  </div>
<% end %>



