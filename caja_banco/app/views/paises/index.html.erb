<h1 id="titulo_paises"> Paises   <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form-toggle">
  <%= render 'formulario' %>
</div><br>

<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to bancos_path(@bancos, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <%= link_to bancos_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">XLS</span>
  <% end %>
</div></br>

<table id="table" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paises.each do |pais| %>
      <tr>
        <td><%= pais.descripcion %></td>
        <td><%= link_to 'Show', pais %></td>
        <td><%= link_to 'Edit', edit_pais_path(pais) %></td>
        <td><%= link_to 'Destroy', pais, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- tabla oculta formateada para impresion -->
<div id="tabla_print">
  <h1>Listado de Paises</h1>
  <table class="table table-striped table-hover" >
    <thead>
      <tr>
        <th>ID</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @paises.each do |pais| %>
        <tr>
          <td><%= pais.id %></td>
          <td><%= pais.descripcion %></td>
          <td><%= link_to 'Show', pais %></td>
          <td><%= link_to 'Edit', edit_pais_path(pais) %></td>
          <td><%= link_to 'Destroy', pais, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr
      <% end %>
    </tbody>
  </table>
</div>