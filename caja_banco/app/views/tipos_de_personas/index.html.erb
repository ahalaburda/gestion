<h1 id='titulo_tipo_de_persona'> Tipos de Personas <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form-toggle">
  <%= render 'form' %>
</div><br>

<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to tipos_de_personas_path(@tipos_de_personas, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <a download="tipos_de_personas.xls" href="#" onclick="return ExcellentExport.excel(this, 'tabla_print', '');", class="btn btn-xls btn-outline btn-circle">XLS</a>
</div></br>

<table id="table" class="table table-striped table-hover">
   <thead>
    <tr>
      <th>Descripcion</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos_de_personas.each do |tipo_de_persona| %>
      <tr>
        <td><%= tipo_de_persona.descripcion %></td>
        <td>
        <%= link_to edit_tipo_de_persona_path(tipo_de_persona), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'remote'=> true, 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to tipo_de_persona, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- tabla oculta formateada para impresion -->
<div id="tabla_print">
  <h1><span><%= image_tag Parametro.last.logo_empresa_url%></span>Listado de Tipos de personas</h1>
    <table class="table table-striped table-hover" >
  <thead>
    <tr>
      <th>Descripcion</th>
    </tr>
  </thead>
  <tbody>
    <% @tipos_de_personas.each do |tipo_de_persona| %>
      <tr>
        <td><%= tipo_de_persona.descripcion %></td>
        </tr>
    <% end %>
  </tbody>
    </table>
</div>