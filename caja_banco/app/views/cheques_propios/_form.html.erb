    <div id="error_explanation">
      <h2><%= pluralize(@cheque_propio.errors.count, "error") %> prohibited this cheque_propio from being saved:</h2>
      <ul>
      <% @cheque_propio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <label for="cheque_propio_chequera_id" class="required">Chequera
          <%= link_to new_chequera_path , remote: true , class: 'btn btn-info btn-outline btn-circle' do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </label>
        </br>
        <%= f.select :chequera_id,
          options_from_collection_for_select(Chequera.all, :id, :id, @cheque_propio.chequera_id),
          {prompt: true}, id: "cheque_propio_chequera_id", include_blank: true, class: "form-control"%>
    </div>

      <div class="field">
        <%= f.label :numero_cheque %>
        <%= f.text_field :numero_cheque , class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :concepto %>
        <%= f.text_field :concepto , class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.label :monto %>
        <%= f.text_field :monto , class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :fecha %><br>
          <div class="input-group">
            <%= f.text_field :fecha, :class => 'datepicker form-control' %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
      </div>
    </div>
    <div class="col-md-4">

    </div>
  </div>

</br>
