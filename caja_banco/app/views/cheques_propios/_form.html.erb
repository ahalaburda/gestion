<%= form_for @cheque_propio, validate: true do |f| %>
  <% if @cheque_propio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cheque_propio.errors.count, "error") %> prohibited this cheque_propio from being saved:</h2>
      <ul>
      <% @cheque_propio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= f.label :chequera_id %>
        <%= f.collection_select :chequera_id, Chequera.all, :id, :id, {prompt: "Seleccione una Chequera"}, {class: "form-control"} %>
      </div>
      <div class="field">
        <%= f.label :numero_cheque %>
        <%= f.text_field :numero_cheque , class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :concepto %>
        <%= f.text_field :concepto , class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.label :monto %>
        <%= f.text_field :monto , class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :fecha %><br>
          <div class="input-group">
            <%= f.text_field :fecha, :class => 'datepicker form-control' %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
      </div>
    </div>
    <div class="col-md-4">

    </div>
  </div>

</br>
  <div class="col-md-offset-10">
    <div class="actions">
      <% if controller.action_name == 'new' or controller.action_name == 'index' %>
        <%= f.submit "Agregar", :class => 'btn btn-primary'%>

      <% elsif controller.action_name == 'edit' %>
        <%= f.submit "Actualizar", :class => 'btn btn-primary'%>
      <% end %>
      <%= button_tag "Cancelar", type: :reset , id: 'btn_cancelar',:class => 'btn btn-reset'%>
    </div>
  </div>
<% end %>
