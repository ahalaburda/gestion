<%= simple_form_for @cheque_entrante, validate: true do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <div class="form-inputs">
        <%= f.association :banco, label_method: "#{:nombre}", prompt: "Seleccione un Banco" %>
        </div>
      </div>
      <div class="field">
        <div class="form-inputs">
          <%= f.input :numero %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <div class="form-inputs">
          <%= f.input :monto %>
        </div>
      </div>
        <div class="field">
        <div class="form-inputs">
          <%= f.input :concepto %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <div class="form-inputs">
          <%= f.association :persona, label_method: "#{:nombre} #{:apellido}", prompt: "Seleccione una persona" %>
        </div>
      </div>
      <div class="field">
        <div class="form-inputs">
          <%= f.input :fecha %>
        </div>
      </div>
    </div>

</br>
  <div class="col-md-offset-10">
    <div class="actions">
      <% if controller.action_name == 'new' or controller.action_name == 'index' %>
        <%= f.submit "Agregar", :class => 'btn btn-primary'%>
        
      <% elsif controller.action_name == 'edit' %>
        <%= f.submit "Actualizar", :class => 'btn btn-primary'%>
      <% end %>
      <%= button_tag "Cancelar", type: :reset , id: 'btn_cancelar',:class => 'btn btn-reset'%>
    </div>
  </div>
<% end %>